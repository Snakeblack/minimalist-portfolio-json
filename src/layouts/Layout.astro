---
import SwitchDarkMode from "../components/SwitchDarkMode.astro";
import { basics } from "@cv";
interface Props {
  title: string;
}

const { title } = Astro.props;
const { image, summary } = basics;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="description" content={summary} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preload" as="image" href={image} />

    <meta
      name="description"
      content="Manuel Retamozo - Desarrollador Web Fullstack especializado en Frontend con Angular y Nextjs. Encuentra aquí mi curriculum y proyectos."
    />
    <meta
      name="keywords"
      content="Manuel Michael Retamozo García, desarrollador web, Angular, React, Nextjs, .NET, JavaScript, TypeScript, HTML, CSS, curriculum, proyectos, contacto"
    />
    <meta name="author" content="Manuel Retamozo" />
    <meta property="og:title" content="Manuel Retamozo - Desarrollador Web" />
    <meta
      property="og:description"
      content="¡Hola! Soy Manuel Retamozo, un apasionado desarrollador web fullstack especializado en Frontend con Angular y Nextjs. Aquí encontrarás mi curriculum y proyectos."
    />
    <meta property="og:image" content="/portada.webp" />
    <meta property="og:url" content="https://cv.mretamozo.com" />
    <meta property="og:type" content="website" />
  </head>
  <body>
    <SwitchDarkMode />
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --dark-primary: #222831;
  }
  html {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      "Courier New",
      monospace;
    background: #fff;
    letter-spacing: -0.025rem;
  }

  .dark {
    background: #171717;
    color: #f5f5f5;

    & .img {
      border: 3px solid #eeeeee57;
      border-radius: 50%;
    }

    & p {
      color: #a8a095;
    }

    & .info span,
    footer no-print {
      color: #a8a095 !important;
		  border-top: none;
      & a {
        color: #9d9488 !important;
        border-color: #35393b !important;
      }

      & a:hover {
        color: #050505 !important;
        background-color: #222426;
      }
    }

    & h2 {
      color: #e1e1e1 !important;
    }

    & h3 {
      color: #dddad6 !important;
    }

    & h4,
    time {
      color: #d3cfc9 !important;
    }

    & a {
      color: #9d9488 !important;
      border-color: #35393b !important;
    }

    & a:hover {
      color: #717171 !important;
      background-color: #222426 !important;
      background: #eee;
      border: 1px solid #ddd !important;
      border-color: #3a3e41 !important;
    }

    & footer span {
      background: #e1e1e1 !important;
    }

    & footer,
    ninja-keys {
      background: #171717 !important;
      border-top: 1px solid #2d2b2b !important;
      & kbd {
        background: #424242 !important;
      }
    }
  }

  body,
  figure {
    margin: 0;
    padding: 0;
  }

  a {
    text-decoration: none;
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  h1,
  h2,
  h3,
  h4 {
    margin: 0;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  p {
    color: #666;
    font-size: 0.9rem;
    line-height: 1.5;
    margin: 0;
    text-wrap: pretty;
  }

  @supports selector(::-webkit-scrollbar) {
    ::-webkit-scrollbar {
      width: 10px;
      border-radius: 10px;
    }

    ::-webkit-scrollbar-thumb {
      border-radius: 10px;
      background-color: theme("colors.primary");
      border: 2px solid transparent;
      background-clip: content-box;
    }

    ::-webkit-scrollbar-thumb:active {
      background-color: #303030;
    }

    ::-webkit-scrollbar-track {
      background: rgba(84, 84, 84, 0.039);
    }

    ::-webkit-scrollbar-corner {
      background: black;
    }
  }

  @supports not selector(::-webkit-scrollbar) {
    * {
      scrollbar-color: theme("colors.primary") transparent;
      scrollbar-width: thin;
    }
  }
</style>
